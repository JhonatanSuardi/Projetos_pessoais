<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transferencia.TransferenciaFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="194dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="194dp"
        android:src="@drawable/ic_transferencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_transfer"
        android:layout_width="345dp"
        android:layout_height="481dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/radius"
        android:backgroundTint="#F4F4F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/saldo_transf"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:layout_marginBottom="380dp"
        android:textColor="#229400"
        android:textColorLink="#229400"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_transfer"
        app:layout_constraintEnd_toEndOf="@+id/view_transfer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view_transfer"
        app:layout_constraintTop_toTopOf="@+id/view_transfer"
        app:layout_constraintVertical_bias="0.426" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transfAgencial"
        android:layout_width="269dp"
        android:layout_height="57dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/radius"
        android:backgroundTint="#595757"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_transfer"
        app:layout_constraintEnd_toEndOf="@+id/view_transfer"
        app:layout_constraintStart_toStartOf="@+id/view_transfer"
        app:layout_constraintTop_toTopOf="@+id/view_transfer">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transfAgenciat"
            android:layout_width="250dp"
            android:layout_height="37dp"
            android:hint="@string/agencia"
            android:maxLength="4"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transfContal"
        android:layout_width="271dp"
        android:layout_height="59dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/radius"
        android:backgroundTint="#595757"
        app:layout_constraintBottom_toBottomOf="@+id/view_transfer"
        app:layout_constraintEnd_toEndOf="@+id/view_transfer"
        app:layout_constraintStart_toStartOf="@+id/view_transfer"
        app:layout_constraintTop_toTopOf="@+id/view_transfer">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transfContat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/conta"
            android:paddingLeft="10dp"
            android:maxLength="6"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transfValorl"
        android:layout_width="275dp"
        android:layout_height="62dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/radius"
        android:backgroundTint="#595757"
        app:layout_constraintBottom_toBottomOf="@+id/view_transfer"
        app:layout_constraintEnd_toEndOf="@+id/view_transfer"
        app:layout_constraintStart_toStartOf="@+id/view_transfer"
        app:layout_constraintTop_toTopOf="@+id/view_transfer">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transfValort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor"
            android:paddingLeft="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/transfConfButton"
        android:layout_width="110dp"
        android:layout_height="59dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/radius"
        android:backgroundTint="#5690E0"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="@+id/view_transfer"
        app:layout_constraintEnd_toEndOf="@+id/view_transfer"
        app:layout_constraintStart_toStartOf="@+id/view_transfer"
        app:layout_constraintTop_toTopOf="@+id/view_transfer" />

    <Button
        android:id="@+id/transfCancButton"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="180dp"
        android:background="@drawable/radius"
        android:backgroundTint="#DC0000"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/view_transfer"
        app:layout_constraintEnd_toEndOf="@+id/view_transfer"
        app:layout_constraintStart_toStartOf="@+id/view_transfer"
        app:layout_constraintTop_toTopOf="@+id/view_transfer" />
</androidx.constraintlayout.widget.ConstraintLayout>